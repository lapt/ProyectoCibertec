@model IEnumerable<ProyectoCibertec.Models.Orden>

@{
    ViewBag.Title = "Ordenes";
}

<h2>Orden de Compra</h2>

<p>
    @Html.ActionLink("Crear Orden", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.strNroDoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtFecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.strNroDoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dtFecha)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idOrden }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.idOrden }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idOrden })
        </td>
    </tr>
}

</table>
